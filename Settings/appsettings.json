{
  "AllowedHosts": "*",

  "Logging": {
    "IncludeScopes": false,
    "PathFormat": "Logs/log-{Date}.txt",
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Error"
    }
  },

  "Settings": {
    "api": {
      "version": 0.1
    },
    
    "Minio": {
      "NodeUri": "http://minio",
      "DefaultIndex": "documents",
      "Port": 9202,
      "Username": "none",
      "Password": "none"
    },

    "Elasticsearch": {
      "NodeUri": "http://elasticsearch",
      "DefaultIndex": "documents",
      "PipelineDescription": "Attachment pipeline for documents",
      "Port": 9200,
      "Username": "none",
      "Password": "none"
    }

  }
}
