{
  "api": {
    "version": 0.1
  },

  "AllowedHosts": "*",

  "Logging": {
    "IncludeScopes": false,
    "PathFormat": "Logs/log-{Date}.txt",
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Error"
    }
  },

  "Elasticsearch": {
    "NodeUri": "http://facilis-elasticsearch",
    "DefaultIndex": "documents_index",
    "PipelineIndex": "attachments_index",
    "PipelineDescription": "Attachment pipeline for documents",
    "Port": 9200,
    "PasswordRequired": false,
    "Username": "none",
    "Password": "none"
  }
}
